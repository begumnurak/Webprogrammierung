        <form class="justify-center grid" action="/create_user" method="post">
            <input class="bg-white" type="text" id="username" name="username" required><br>
            <input class="bg-red-600 hover:bg-red-800 m-2 rounded-lg text-xl" type="submit" value="Erstellen">
        </form>
    </main>
